{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": ["node", "aws-lambda"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
